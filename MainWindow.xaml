<Window x:Class="P5RBattleEditorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P5RBattleEditorWPF" 
        xmlns:control="clr-namespace:P5RBattleEditorWPF.Controls"
        mc:Ignorable="d"
        Title="P5R Battle Editor" Height="450" Width="800" BorderBrush="#FFFFDD93" Foreground="#FFFFDD93">
    <Window.Resources>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF000000"/>
            <GradientStop Color="#FF2C0000" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="339*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">

            <!--Menustrip-->
            <Menu DockPanel.Dock="Top" Background="#2C0000" Foreground="White">
                <MenuItem Header="File" Margin="5">
                    <MenuItem.Icon>
                        <Image Source="/Dependencies/page.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                    <MenuItem Header="New Project" Click="NewProject_Click">
                        <MenuItem.Icon>
                            <Image Source="/Dependencies/asterisk_yellow.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <!--Form Contents-->
            <Grid>
                <TabControl Margin="2,2,2,2" BorderThickness="0.3,0.3,0.3,0.3" Background="Transparent">
                    <TabItem Header="Units">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <Grid Height="1500">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="75" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <GroupBox Header="_Selected Unit" Grid.Column="0" Margin="5,5,5,5">
                                        <ComboBox Name="_Units" Height="20" VerticalAlignment="Top"></ComboBox>
                                    </GroupBox>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Encounters" >
                        <Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Personas" >
                        <Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Skills" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="109*"/>
                                <ColumnDefinition Width="683*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </DockPanel>
    </Grid>
</Window>